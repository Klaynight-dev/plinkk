{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
  "downlevelIteration": true,
  "lib": ["ES2016", "DOM"]
  },
  "include": [
    "contents/js/**/*.ts",
    "contents/js/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
