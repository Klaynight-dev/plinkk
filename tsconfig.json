{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./public/contents/js",
    "rootDir": "./contents/js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false,
    "removeComments": true
  },
  "include": [
    "contents/js/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ]
}